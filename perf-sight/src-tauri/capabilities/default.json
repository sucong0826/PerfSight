{
  "identifier": "default",
  "description": "Default capability for the main window/webview. Allows receiving metric batches from the backend via Tauri events.",
  "windows": ["*"],
  "permissions": [
    "core:default",
    "core:event:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-close",
    "core:window:allow-show",
    "core:window:allow-hide",
    "core:window:allow-set-focus",
    "core:webview:allow-create-webview-window",
    "core:webview:allow-webview-close",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/collector",
          "sidecar": true,
          "args": true
        }
      ]
    }
  ]
}
